<%= render 'partial/navbar' %>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="text-center">
						<span style="font-size:24px;">料理を提供する</span>
					</div>
				</div>
			
				<div class="panel-body">			
						<!-- ここからフォーム -->
						<%= form_for @listing do |f| %>
							<div class="row">
								<div class="col-md-12 select">
									<div class="form-group">
										<label>料理の種類</label>
										<%= f.select :meal_type, [["和食","和食"], ["中華","中華"], ["イタリアン","イタリアン"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
									</div>
								</div>
							</div>
							<br>

							<div class="row">
								<div class="col-md-12 select">
									<div class="form-group">
										<label>募集する人数</label>
										<%= f.select :guest_number, [["1人",1], ["2人",2],["3人",3],["4人",4],["5人",5]], {prompt:"選択してください"},  {required: 'true', autofocus: 'true', class: 'form-control'} %>
									</div>
								</div>
							</div>
							<br>

							<div class="row">
								<div class="col-md-12 select">
									<div class="form-group">
										<label>アレルギー</label>
										<%= f.select :meal_allergy, [["小麦粉","小麦粉"], ["卵","卵"], ["牛乳","牛乳"], ["その他","その他"]], {prompt:"選択してください"}, {required: 'true', autofocus: 'true', class: 'form-control'} %>
									</div>
								</div>
							</div>
						</div>

						<div style="padding:11px;" class="actions">
							<%= f.submit "Save", class: "btn btn-danger" %>
						</div>
					<% end %>
				</div>
			</div>		
		</div>
	</div>

</div>



